datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["selectRelationCount"]
}

enum OrganizationRole {
  SUPERADMIN
  CUSTOMER
}

model Organization {
  id    String           @id @default(uuid())
  name  String
  role  OrganizationRole
  users User[]

  @@map("organizations")
}

enum UserRole {
  OWNER
  ADMIN
  USER
}

model User {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  password       String
  role           UserRole
  createdAt      DateTime     @default(now()) @map(name: "created_at")
  updatedAt      DateTime     @default(now()) @map(name: "updated_at")
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, email])
  @@map(name: "users")
}

model Session {
  id           String   @id @default(uuid())
  userId       Int      @map(name: "user_id")
  expires      DateTime
  sessionToken String   @unique @map(name: "session_token")
  accessToken  String   @unique @map(name: "access_token")
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "sessions")
}

model Auction {
  id         String  @id @default(uuid())
  sellerId   String  @map(name: "seller_id")
  categoryId String? @map(name: "category_id")

  bidIncrement  Float  @map(name: "bid_increment")
  startingPrice Float  @map(name: "starting_price")
  reservePrice  Float? @map(name: "reserve_price")
  buyItNowPrice Float? @map(name: "buy_it_now_price")

  duration    Int
  title       String
  description String?

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  bids       Bid[]
  statuses   AuctionStatus[]
  category   Category?          @relation(fields: [categoryId], references: [id])
  attributes AuctionAttribute[]
  medias     AuctionMedia[]

  @@map(name: "auctions")
}

model Bid {
  id         String   @id @default(uuid())
  customerId String   @map(name: "customer_id")
  auctionId  String   @map(name: "auction_id")
  value      Float
  createdAt  DateTime @default(now()) @map(name: "created_at")
  auction    Auction  @relation(fields: [auctionId], references: [id])

  @@map(name: "bids")
}

enum AuctionStatuses {
  OPEN
  CLOSED
  SOLD
  EXPIRED
}

model AuctionStatus {
  id        String          @id @default(uuid())
  auctionId String          @map(name: "auction_id")
  status    AuctionStatuses
  createdAt DateTime        @default(now()) @map(name: "created_at")
  auction   Auction         @relation(fields: [auctionId], references: [id])
}

model AuctionMedia {
  id        String   @id @default(uuid())
  auctionId String   @map(name: "auction_id")
  url       String
  thumbnail String
  height    Int
  width     Int
  createdAt DateTime @default(now()) @map(name: "created_at")
  auction   Auction  @relation(fields: [auctionId], references: [id])
}

model Category {
  id         String      @id @default(uuid())
  name       String
  createdAt  DateTime    @default(now()) @map(name: "created_at")
  updatedAt  DateTime    @default(now()) @map(name: "updated_at")
  auctions   Auction[]
  attributes Attribute[]

  @@unique([name])
  @@map("categories")
}

enum AttributeType {
  TEXT
  NUMBER
  BOOLEAN
  DROPDOWN
}

model Attribute {
  id         String             @id @default(uuid())
  name       String
  slug       String
  type       AttributeType
  isRequired Boolean
  createdAt  DateTime           @default(now()) @map(name: "created_at")
  updatedAt  DateTime           @default(now()) @map(name: "updated_at")
  options    AttributeOption[]
  categories Category[]
  values     AuctionAttribute[]

  @@unique([name, slug])
  @@map("attributes")
}

model AttributeOption {
  attributeId String
  name        String
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  @@unique([attributeId, name])
  @@map("attributes_options")
}

model AuctionAttribute {
  auctionId   String
  attributeId String
  value       String
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")
  auction     Auction   @relation(fields: [auctionId], references: [id])
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  @@id([auctionId, attributeId])
  @@map("auctions_attributes")
}
