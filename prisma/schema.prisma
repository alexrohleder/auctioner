datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["selectRelationCount"]
}

model Account {
  id                 String    @id @default(uuid())
  compoundId         String    @unique @map(name: "compound_id")
  userId             Int       @map(name: "user_id")
  providerType       String    @map(name: "provider_type")
  providerId         String    @map(name: "provider_id")
  providerAccountId  String    @map(name: "provider_account_id")
  refreshToken       String?   @map(name: "refresh_token")
  accessToken        String?   @map(name: "access_token")
  accessTokenExpires DateTime? @map(name: "access_token_expires")
  createdAt          DateTime  @default(now()) @map(name: "created_at")
  updatedAt          DateTime  @default(now()) @map(name: "updated_at")

  @@index([providerAccountId], name: "providerAccountId")
  @@index([providerId], name: "providerId")
  @@index([userId], name: "userId")
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(uuid())
  userId       Int      @map(name: "user_id")
  expires      DateTime
  sessionToken String   @unique @map(name: "session_token")
  accessToken  String   @unique @map(name: "access_token")
  createdAt    DateTime @default(now()) @map(name: "created_at")
  updatedAt    DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "sessions")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map(name: "email_verified")
  image         String?
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")

  @@map(name: "users")
}

model VerificationRequest {
  id         String   @id @default(uuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map(name: "created_at")
  updatedAt  DateTime @default(now()) @map(name: "updated_at")

  @@map(name: "verification_requests")
}

model Auction {
  id         String @id @default(uuid())
  sellerId   String @map(name: "seller_id")
  categoryId String @map(name: "category_id")

  bidIncrement  Float  @map(name: "bid_increment")
  startingPrice Float  @map(name: "starting_price")
  reservePrice  Float? @map(name: "reserve_price")
  buyItNowPrice Float? @map(name: "buy_it_now_price")

  duration    Int
  title       String
  description String?

  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @map(name: "updated_at")

  bids       Bid[]
  statuses   AuctionStatus[]
  category   Category           @relation(fields: [categoryId], references: [id])
  attributes AuctionAttribute[]

  @@map(name: "auctions")
}

model Bid {
  id         String   @id @default(uuid())
  customerId String   @map(name: "customer_id")
  auctionId  String   @map(name: "auction_id")
  value      Float
  createdAt  DateTime @default(now()) @map(name: "created_at")
  auction    Auction  @relation(fields: [auctionId], references: [id])

  @@map(name: "bids")
}

enum AuctionStatuses {
  OPEN
  CLOSED
  SOLD
  EXPIRED
}

model AuctionStatus {
  id        String          @id @default(uuid())
  auctionId String          @map(name: "auction_id")
  status    AuctionStatuses
  createdAt DateTime        @default(now()) @map(name: "created_at")
  auction   Auction         @relation(fields: [auctionId], references: [id])
}

model Category {
  id         String      @id @default(uuid())
  name       String
  createdAt  DateTime    @default(now()) @map(name: "created_at")
  updatedAt  DateTime    @default(now()) @map(name: "updated_at")
  auctions   Auction[]
  attributes Attribute[]

  @@unique([name])
  @@map("categories")
}

enum AttributeType {
  TEXT
  NUMBER
  BOOLEAN
  DROPDOWN
}

model Attribute {
  id         String             @id @default(uuid())
  name       String
  slug       String
  type       AttributeType
  isRequired Boolean
  createdAt  DateTime           @default(now()) @map(name: "created_at")
  updatedAt  DateTime           @default(now()) @map(name: "updated_at")
  options    AttributeOption[]
  categories Category[]
  values     AuctionAttribute[]

  @@unique([name, slug])
  @@map("attributes")
}

model AttributeOption {
  attributeId String
  name        String
  createdAt   DateTime  @default(now()) @map(name: "created_at")
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  @@unique([attributeId, name])
  @@map("attributes_options")
}

model AuctionAttribute {
  auctionId   String
  attributeId String
  value       String
  updatedAt   DateTime  @default(now()) @map(name: "updated_at")
  auction     Auction   @relation(fields: [auctionId], references: [id])
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  @@id([auctionId, attributeId])
  @@map("auctions_attributes")
}
